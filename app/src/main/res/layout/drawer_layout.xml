<?xml version="1.0" encoding="utf-8"?>
<tk.zwander.widgetdrawer.views.Drawer xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/button_wrapper"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/cardBackground"
        android:elevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <CheckBox
            android:id="@+id/toggle_reorder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:selectableItemBackgroundBorderless"
            android:text="@string/edit_mode"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:buttonTint="?android:colorAccent"
            android:layout_gravity="start|center_vertical"
            android:elevation="4dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/add_widget"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/add_skel"
                android:tint="#fff"
                />

            <ImageView
                android:id="@+id/close_drawer"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:src="@drawable/add_skel"
                android:tint="#fff"
                android:rotation="45"
                />

        </LinearLayout>

    </LinearLayout>

    <tk.zwander.widgetdrawer.views.DrawerRecycler
        android:id="@+id/widget_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_wrapper"
        app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
        />

</tk.zwander.widgetdrawer.views.Drawer>